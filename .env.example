# =============================================================================
# Sankore (Paid Ads Walker Agent) - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL Lakehouse)
# -----------------------------------------------------------------------------
# For local development with Docker:
DATABASE_URL=postgresql+asyncpg://sankore:sankore_password@localhost:5433/sankore_db
# For production (Railway):
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/sankore_db

# -----------------------------------------------------------------------------
# MinIO Object Storage (Bucket Storage for Lakehouse)
# -----------------------------------------------------------------------------
MINIO_ENDPOINT=sankore-minio:9000
# For local development:
# MINIO_ENDPOINT=localhost:9002
MINIO_ACCESS_KEY=sankore-minio-key
MINIO_SECRET_KEY=sankore-minio-secret-change-in-production

# -----------------------------------------------------------------------------
# Redis & Celery Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://sankore-redis:6379/0
# For local development:
# REDIS_URL=redis://localhost:6380/0

CELERY_BROKER_URL=redis://sankore-redis:6379/0
CELERY_RESULT_BACKEND=redis://sankore-redis:6379/0
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=1800
CELERY_TASK_SOFT_TIME_LIMIT=1500

# Flower Monitoring
FLOWER_BASIC_AUTH=admin:sankore-flower-password-change-in-production

# -----------------------------------------------------------------------------
# EnGarde Production Backend Integration (Walker Agent Communication)
# -----------------------------------------------------------------------------
ENGARDE_API_URL=https://api.engarde.com
ENGARDE_API_KEY=your-engarde-api-key-here
ENGARDE_TENANT_UUID=your-tenant-uuid-here
ENGARDE_API_TIMEOUT=30
ENGARDE_API_MAX_RETRIES=3

# -----------------------------------------------------------------------------
# AI Service Configuration
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229

# -----------------------------------------------------------------------------
# Ad Platform API Keys
# -----------------------------------------------------------------------------
# Google Ads API
GOOGLE_ADS_DEVELOPER_TOKEN=your-developer-token-here
GOOGLE_ADS_CLIENT_ID=your-client-id-here
GOOGLE_ADS_CLIENT_SECRET=your-client-secret-here
GOOGLE_ADS_REFRESH_TOKEN=your-refresh-token-here
GOOGLE_ADS_LOGIN_CUSTOMER_ID=your-login-customer-id-here

# Meta Ads API (Facebook/Instagram)
META_APP_ID=your-app-id-here
META_APP_SECRET=your-app-secret-here
META_ACCESS_TOKEN=your-access-token-here

# LinkedIn Ads API
LINKEDIN_CLIENT_ID=your-client-id-here
LINKEDIN_CLIENT_SECRET=your-client-secret-here
LINKEDIN_ACCESS_TOKEN=your-access-token-here

# TikTok Ads API
TIKTOK_APP_ID=your-app-id-here
TIKTOK_APP_SECRET=your-app-secret-here
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token-here

# Microsoft Ads API
MICROSOFT_DEVELOPER_TOKEN=your-developer-token-here
MICROSOFT_CLIENT_ID=your-client-id-here
MICROSOFT_CLIENT_SECRET=your-client-secret-here
MICROSOFT_REFRESH_TOKEN=your-refresh-token-here

# Twitter/X Ads API
TWITTER_API_KEY=your-api-key-here
TWITTER_API_SECRET=your-api-secret-here
TWITTER_ACCESS_TOKEN=your-access-token-here
TWITTER_ACCESS_TOKEN_SECRET=your-access-token-secret-here

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
SECRET_KEY=your-secret-key-here-change-in-production-use-cryptographically-secure-random-string
DEBUG=False
ENVIRONMENT=production

# CORS Configuration
# For production, specify exact origins (comma-separated)
ALLOWED_ORIGINS=https://your-frontend.railway.app,https://your-backend.railway.app

# Service Configuration
PORT=8001
HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Performance & Monitoring
# -----------------------------------------------------------------------------
ENABLE_PERFORMANCE_MONITORING=true
SLOW_REQUEST_THRESHOLD=1.0
ENABLE_RATE_LIMITING=true
DEFAULT_RATE_LIMIT_REQUESTS=100
DEFAULT_RATE_LIMIT_WINDOW=60
